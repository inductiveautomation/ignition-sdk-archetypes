<archetype-descriptor name="${artifactId}">
    <modules>
        <module id="${rootArtifactId}-build" dir="__rootArtifactId__-build" name="${rootArtifactId}-build" package="">
            <!-- No files to copy for build module -->
        </module>
        <module id="${rootArtifactId}-common" dir="__rootArtifactId__-common" name="${rootArtifactId}-common">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/test/java</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-designer" dir="__rootArtifactId__-designer" name="${rootArtifactId}-designer">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/test/java</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-gateway" dir="__rootArtifactId__-gateway" name="${rootArtifactId}-gateway">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/test/java</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources/mounted</directory>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources/mounted/js</directory>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-perspective" dir="__rootArtifactId__-perspective"
                name="${rootArtifactId}-perspective">
            <fileSets>
                <fileSet filtered="true" packaged="false" encoding="UTF-8">
                    <directory>packages</directory>
                </fileSet>
                <fileSet filtered="true" packaged="false" encoding="UTF-8">
                    <directory/>
                    <includes>
                        <include>.yarnrc</include>
                        <include>lerna.json</include>
                        <include>package.json</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
    </modules>
</archetype-descriptor>
