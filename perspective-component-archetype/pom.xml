<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.inductiveautomation.ignitionsdk</groupId>
        <artifactId>ignition-sdk-archetypes</artifactId>
        <version>1.2.1-SNAPSHOT</version>
    </parent>

    <artifactId>perspective-component-archetype</artifactId>
    <packaging>maven-archetype</packaging>

    <name>Archetype - Ignition Perspective+Designer+Gateway Scope Module</name>
    <description>Maven Archetype for an Ignition Perspective+Designer+Gateway Scope Module</description>
    <url>http://github.com/inductiveautomation/ignition-sdk-archetypes</url>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.archetype</groupId>
                <artifactId>archetype-packaging</artifactId>
                <version>2.3</version>
            </extension>
        </extensions>

        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-archetype-plugin</artifactId>
                    <version>2.3</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
